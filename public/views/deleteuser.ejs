    <div id='deletebox'>
	<h2 id="heading">Delete Your Account</h2>

	
		
	<form action="/deletePassword" method="post">
		
			
			<label id="emailId">Email ID/Username</label>
			<input type ="email" id = 'emaildel' name="email" placeholder="Username" required>
			<br><br>

			<label id="passwordId">Password</label>
			<!-- <input type="Password" id = "password" name="password" placeholder="Password" required>
			<br><br> -->
            <input type="password" id="password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
			<br><br>

        
		
			<button id="deleteButton" type ="submit">Delete Account</button>
			
		
		
        </form>
	</div>
